{
  "name": "Mnist_GAN",
  "n_gpu": 1,

  "arch": {
    "type": "GAN",
    "args": {
      "latent_dim": 100
    }
  },
  "data_loader": {
    "type": "MnistDataLoader",
    "args": {
      "data_dir": "data/",
      "batch_size": 32,
      "shuffle": true,
      "num_workers": 2
    }
  },

  "optimizer_G": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true

    }
  },
  "optimizer_D": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true

    }
  },
  "loss": "adversarial_loss",
  "metrics": [],
  "lr_scheduler_G": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "lr_scheduler_D": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "type": "WGANGPTrainer",

    "epochs": 100,

    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,

    "tensorboard": true
  },
  "eval": {
    "save_dir": "saved/generated",
    "n_sample": 1000,
    "batch_size": 8
  },
  "augment": {
    "type": "DiffAugment",
    "args": {
      "saturation": 1,
      "brightness": 1,
      "contrast": 1,
      "cutout": 1,
      "translation": 1
    }
  }
}
